<section>
    <div class="container mt-5 mb-2">
        <div class="row">
          <div class="info-section d-flex justify-content-center">
            <h1 class="text-primary border-bottom text-capitalize"><%=subTitle%> Courses</h1>
          </div>
    </div>
    </div>
</section>

<section>
    <div class="container my-4">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-10">
                <ol class="list-group list-group-numbered">
                   <% if(threads.length>0){ %> 
                        <% threads.forEach((data)=>{ %>
                    <li class="list-group-item d-flex justify-content-between align-items-start my-1">
                      <div class="ms-2 me-auto">
                        <div class="fw-bold h5"><a href="/posts/<%=data.slug%>"><%=data.title%></a></div>
                       <%=data.description%>
                      </div>
                    </li>
                    <%})%>
                    <% }else{  %>
                    <h1>Not found</h1>
                    <%}%>
                  </ol>
                  
            </div>
        </div>
    </div>
</section>
